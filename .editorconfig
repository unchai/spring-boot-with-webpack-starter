# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{js,json}]
indent_style = space
indent_size = 2

[*.java]
indent_style = tab

[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false
